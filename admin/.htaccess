<ifModule mod_headers.c>
    <FilesMatch "\.php">
        Header set Expires "Thu, 19 Nov 1981 00:00:00 GMT"
        Header set Pragma "no-cache"
        Header set Cache-Control "no-cache, must-revalidate, max-age=0"
    </FilesMatch>
</ifModule>

